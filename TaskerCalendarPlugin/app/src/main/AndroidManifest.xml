<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="internalOnly">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskerCalendarPlugin"
        tools:targetApi="33">

        <!-- Tasker Plugin Version Metadata -->
        <meta-data
            android:name="com.twofortyfouram.locale.api.BONUS_STRING_PLUGIN_VERSION_CODE"
            android:value="1" />

        <!-- Plugin Configuration Activity -->
        <activity
            android:name=".ui.PluginEditActivity"
            android:label="@string/calendar_plugin_action_label"
            android:icon="@mipmap/ic_launcher"
            android:exported="true"
            android:enabled="true"
            android:taskAffinity="com.example.taskercalendarplugin.EDIT_AFFINITY">

            <!-- Combined intent-filter for Tasker + Locale -->
            <intent-filter>
                <action android:name="net.dinglisch.android.tasker.ACTION_EDIT" />
                <action android:name="com.twofortyfouram.locale.api.intent.action.EDIT_SETTING" />
            </intent-filter>

            <!-- Metadata for Tasker/Locale display -->
            <meta-data
                android:name="com.twofortyfouram.locale.intent.extra.TITLE"
                android:resource="@string/calendar_plugin_action_label" />
            <meta-data
                android:name="com.twofortyfouram.locale.intent.extra.ICON"
                android:resource="@mipmap/ic_launcher" />
        </activity>

        <!-- Plugin Fire BroadcastReceiver (for Actions) -->
        <receiver
            android:name="com.joaomgcd.taskerpluginlibrary.action.BroadcastReceiverAction"
            android:exported="true"
            android:process=":background">
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.api.intent.action.FIRE_SETTING" />
            </intent-filter>
        </receiver>

        <!-- (OPTIONNEL) Plugin Query BroadcastReceiver (for Conditions/States) -->
        <!-- Décommente pour permettre à ton plugin de servir de condition (état logique dans Tasker) -->
        <!--
        <receiver
            android:name=".receiver.PluginQueryReceiver"
            android:exported="true"
            android:process=":background">
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.api.intent.action.QUERY_CONDITION" />
            </intent-filter>
        </receiver>
        -->

    </application>
</manifest>