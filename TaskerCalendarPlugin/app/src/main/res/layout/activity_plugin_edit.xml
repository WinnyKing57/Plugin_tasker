<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar Plugin Configuration"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvPermissionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:text="@string/permissions_required_to_configure"
            android:visibility="gone"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerActionType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:prompt="@string/action_type_prompt"/>

        <!-- Legacy EditText (initially hidden, for fallback if needed) -->
        <EditText
            android:id="@+id/editTextConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/edit_text_legacy_config_hint"
            android:visibility="gone" />


        <!-- Configuration for "Get Upcoming Events" -->
        <LinearLayout
            android:id="@+id/layoutGetEventsConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:background="#f0f0f0"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_get_events_config"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etGetEventsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_event_count"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_or_separator"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etGetEventsDaysAhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_days_ahead"
                android:inputType="number" />
        </LinearLayout>

        <!-- Configuration for "Add New Event" -->
        <LinearLayout
            android:id="@+id/layoutAddEventConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:background="#f0f0f0"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_add_event_config"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etAddEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_event_title"
                android:inputType="textCapSentences" />

            <EditText
                android:id="@+id/etAddEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_event_description"
                android:inputType="textMultiLine"
                android:lines="2"
                android:gravity="top"/>

            <EditText
                android:id="@+id/etAddEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_event_location"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/etAddEventStartTimeOffset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_event_start_offset"
                android:inputType="number" />

            <EditText
                android:id="@+id/etAddEventDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_event_duration"
                android:inputType="number" />

            <!-- Simple text inputs for date/time for now -->
            <!-- <EditText
                android:id="@+id/etEventStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Date (YYYY-MM-DD)" />
            <EditText
                android:id="@+id/etEventStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Time (HH:MM)" />-->

        </LinearLayout>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="@string/button_save_config" />

    </LinearLayout>
</ScrollView>
